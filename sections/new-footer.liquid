<style>
  .footer{
    padding: 80px 0 40px;
    background-color: #3e5242;
    color: #fdfaf2;
  }
  .footer__inner{
    padding: 0 60px;
  }
  .footer__box-logo{
    padding-bottom: 20px;
    border-bottom: 1px solid rgb(253 250 242 / 12%);
  }
  .footer__box-inner.menu{
    padding-left: 30px;
    border-bottom: 1px solid rgb(253 250 242 / 12%);
  }
  .footer__box-title h3{
    padding-bottom: 10px;
    font-size: 15px;
    line-height: 16px;
    color: #fdfaf2;
    font-weight: 600;
    text-transform: uppercase;
  }
  .footer__box-inner.menu ul{
    padding: 0;
    list-style: none;
  }
  .footer__box-inner.menu li{
    margin-bottom: .25em;
  }
  .footer__box-inner.menu li a{
    font-size: 15px;
    line-height: 20px;
    font-weight: 400;
    color: #fdfaf2;
    display: block;
    padding: 4px 0;
  }
  .footer__box-inner.news{
    padding-left: 30px;
  }
  .footer__box-inner.news p{
    font-size: 15px;
    line-height: 20px;
    font-weight: 400;
    color: #fdfaf2;
    padding: 4px 0;
  }
  .newsletter-form__box{
    display: block;
  }
  .newsletter-form__box input{
    width: 100%;
    border: 1px solid;
    border-color: rgba(253,250,242,.12);
    background-color: #fdfaf2;
    padding: 8px 10px;
    color: #3e5242;
    font-size: 15px;
    margin-bottom: 20px;
    font-weight: 600;
  }
  .newsletter-form__box button{
    width: 100%;
    background-color: #fdfaf2;
    padding: 11px 20px;
    color: #3e5242;
    font-size: 16px;
    border: none;
    cursor: pointer;
    font-weight: 600;
  }
  .footer__copyright{
    width: 100%;
    text-align: center;
    margin-top: 30px;
    margin-bottom: 10px;
  }
  .footer__copyright>span {
    display: inline-block;
    padding: 0 8px;
    font-size: 12px;
    text-align: center;
    color: #fdfaf2;
    margin: 0 20px 20px;
}
</style>

<footer>

  <div class="footer">
    <div class="container-fluid">
      <div class="footer__inner">
        <div class="row">
          <div class="col-lg-4 col-md-4 col-12">
            <div class="footer__box">
              <div class="footer__box-inner">
                <div class="footer__box-logo">

                  <a href="{{ routes.root_url }}">

                    {% if section.settings.logo != blank %}
                    <img class="lazyload" src="{{ section.settings.logo | img_url: 'x50' }}">
                    {% else %}
                    <span class="h2">{{ shop.name }}</span>
                    {% endif %}

                  </a>

                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-4 col-12">
            <div class="footer__box">
              <div class="footer__box-inner menu">
                <div class="footer__box-title">
                  <h3>{{ section.settings.menu_title }}</h3>
                </div>
                <div class="footer__box-menu">

                  <nav role="navigation">
                    <ul>
                      {%- for link in section.settings.menu.links -%}
                      <li>
                        <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
                          {{ link.title }}
                        </a>

                        {%- if link.links != blank -%}
                        <ul>
                          {%- for child_link in link.links -%}
                          <li>
                            <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page"{% endif %}>
                              {{ child_link.title }}
                            </a>

                            {%- if child_link.links != blank -%}
                            <ul>
                              {%- for grandchild_link in child_link.links -%}
                              <li>
                                <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page"{% endif %}>
                                  {{ grandchild_link.title }}
                                </a>
                              </li>
                              {%- endfor -%}
                            </ul>
                            {%- endif -%}

                          </li>
                          {%- endfor -%}
                        </ul>
                        {%- endif -%}

                      </li>
                      {%- endfor -%}
                    </ul>
                  </nav>
                  
                  <div class="footer__social">
                    <div class="footer__social-inner">
                    	<ul class="d-flex">
                          {% if settings.social_twitter_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_twitter_link }}"><i class="fab fa-twitter"></i></a></li>
                          {% endif %}
                          {% if settings.social_facebook_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_facebook_link }}"><i class="fab fa-facebook-f"></i></a></li>
                          {% endif %}
                          {% if settings.social_pinterest_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_pinterest_link }}"><i class="fab fa-pinterest-p"></i></a></li>
                          {% endif %}
                          {% if settings.social_instagram_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_instagram_link }}"><i class="fab fa-instagram"></i></a></li>
                          {% endif %}
                          {% if settings.social_tiktok_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_tiktok_link }}"><i class="fab fa-tiktok"></i></a></li>
                          {% endif %}
                          {% if settings.social_tumblr_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_tumblr_link }}"><i class="fab fa-tumblr"></i></a></li>
                          {% endif %}
                          {% if settings.social_snapchat_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_snapchat_link }}"><i class="fab fa-snapchat"></i></a></li>
                          {% endif %}
                          {% if settings.social_youtube_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_youtube_link }}"><i class="fab fa-youtube"></i></a></li>
                          {% endif %}
                          {% if settings.social_vimeo_link %}
                          <li><a class="p-0 mx-2" href="{{ settings.social_vimeo_link }}"><i class="fab fa-vimeo"></i></a></li>
                          {% endif %}
                      </ul>
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-4 col-12">
            <div class="footer__box">
              <div class="footer__box-inner news">
                <div class="footer__box-title">
                  <h3>{{ section.settings.newstitle }}</h3>
                </div>
                <div class="footer__box-text">
                  <p>{{ section.settings.newstext }}</p>
                </div>
                <div class="footer__box-form">

                  {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <div class="newsletter-form__box">
                    <input
                           id="NewsletterForm--{{ section.id }}"
                           type="email"
                           name="contact[email]"
                           class="news-input"
                           value="{{ form.email }}"
                           aria-required="true"
                           autocorrect="off"
                           autocapitalize="off"
                           autocomplete="email"
                           {% if form.errors %}
                           autofocus
                           aria-invalid="true"
                           aria-describedby="ContactFooter-error"
                           {% elsif form.posted_successfully? %}
                           aria-describedby="ContactFooter-success"
                           {% endif %}
                           placeholder="Oppgi din e-post"
                           required
                           >
                    <button type="submit" class="news-btn" name="commit" id="Subscribe" aria-label="{{ 'newsletter.button_label' | t }}">
                      Meld p√•
                    </button>
                    {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
                    {%- endif -%}
                  </div>
                  {%- if form.posted_successfully? -%}
                  <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="ContactFooter-success" tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
                  {%- endif -%}
                  {%- endform -%}

                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">

            <div class="footer__copyright">
              {%- if section.settings.show_copyright -%}
              <span>
                &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
                {%- if section.settings.copyright_text != blank -%}
                {{ section.settings.copyright_text }}
                {%- endif -%}
              </span>
              {%- endif -%}
              {% comment %} <span class="footer__powered_by">{{ powered_by_link }}</span> {% endcomment %}
            </div>
        </div>
      </div>
    </div>
  </div>

</footer>




{% schema %}
{
    "name":"New Footer",
    "settings":[
        {
            "type":"image_picker",
            "id":"logo",
            "label":"Logo"
        },
        {
            "type":"text",
            "id":"menu_title",
            "label":"Menu Title"
        },
        {
            "type":"link_list",
            "id":"menu",
            "label":"Footer Menu"
        },
        {
            "type":"text",
            "id":"newstitle",
            "label":"News Title"
        },
        {
            "type":"text",
            "id":"newstext",
            "label":"News Title"
        },
        {
            "type":"checkbox",
            "id":"show_copyright",
            "label":"Show copyright"
        },
        {
            "type":"text",
            "id":"copyright_text",
            "label":"Additional copyright text"
        }
    ],
    "presets":[
        {
            "name":"New Footer",
            "category":"Footer"
        }
    ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

