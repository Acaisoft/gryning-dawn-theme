 {
    "name":"New Footer",
    "settings":[
        {
            "type":"image_picker",
            "id":"logo",
            "label":"Logo"
        },
{
            "type":"text",
            "id":"menu_title",
            "label":"Menu Title"
        },
{
            "type":"link_list",
            "id":"menu",
            "label":"Footer Menu"
        },
{
            "type":"text",
            "id":"newstitle",
            "label":"News Title"
        },
{
            "type":"text",
            "id":"newstext",
            "label":"News Title"
        }
    ],
    "presets":[
        {
            "name":"New Footer",
            "category":"Footer"
        }
    ]
}
{% endschema %}

