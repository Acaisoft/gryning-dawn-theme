<style>
  .new-fading{
    position: relative;
  }

  .new-fading .slide-content{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px 20px 10px 0;
  }

  .new-fading  .hero-slide img {
    width: 100%;
    height: 600px;
    object-fit: cover;
    object-position: top center;
  }
  .new-fading  .slide-content h1 {
    font-size: 30px;
    color: #fff;
    line-height: 36px;
    margin-bottom: 10px;
    text-align: center;
  }

  /** Text Animation **/

  @-webkit-keyframes fadeInUpSD {
    0% {
      opacity: 0;
      -webkit-transform: translateY(100px);
      transform: translateY(100px);
    }

    100% {
      opacity: 1;
      -webkit-transform: none;
      transform: none;
    }
  }

  @keyframes fadeInUpSD {
    0% {
      opacity: 0;
      -webkit-transform: translateY(100px);
      transform: translateY(100px);
    }

    100% {
      opacity: 1;
      -webkit-transform: none;
      transform: none;
    }
  }
  @keyframes zoom {
    0% {
      transform: scale(1.1);
    }

    100% {
      transform: scale(1);
    }
  }

  .fadeInUpSD {
    -webkit-animation-name: fadeInUpSD;
    animation-name: fadeInUpSD;
  }

  .new-fading .slick-active .slide-content {
    animation-name: fadeInUpSD;
    animation-duration: 1s;
    opacity: 1;
    width: 100%;
    padding: 10px 20px 30px 0;
  }
  .new-fading .slick-active img{
  	animation-name: zoom;
    animation-duration: 2s;
  }
</style>





<script>

  jQuery(document).ready(function ($) {
    $('.new-fading').slick({
      dots: false,
      infinite: true,
      speed: 500,
      fade: !0,
      cssEase: 'linear',
      slidesToShow: 1,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 8000,
      draggable: false,
      arrows: false
    });
  });		

</script>






<section>
  <div class="new-fading" data-arrows="true" data-autoplay="true">

    {% for block in section.blocks %}
    <div class="hero-slide">
      <img class="image lazyload" src="{{ block.settings.image | img_url: 'master' }}">
      <div class="slide-content">
        <h1>{{ block.settings.text1 }}</h1>
      </div>
    </div>
    {% endfor %}

  </div>
</section>





