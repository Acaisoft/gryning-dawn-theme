<style>
  .promotions{
    margin: 100px 0;
  }
  .promotions__inner{
  	padding: 0 60px;
  }
  .promotions__box-img a{
  	display: block;
  }
  .promotions__box-img img{
  	width: 100%;
    height: 315px;
    object-fit: cover;
    object-position: center;
  }
  .promotions__title h3{
  	font-size: 21px;
    font-weight: 600;
    line-height: 26px;
    margin-bottom: 20px;
    color: #3e5242;
  }
  .promotions__text p{
  	font-size: 16px;
    font-weight: 500;
    line-height: 22px;
    padding-right: 20px;
    margin-bottom: 20px;
    color: #3e5242;
  }
  .promotions__text a{
    display: inline-block;
    padding: 11px 20px;
    text-decoration: none;
    text-align: center;
    vertical-align: middle;
    white-space: normal;
    cursor: pointer;
    border: 1px solid transparent;
  	font-size: 16px;
    color: #fdfaf2;
    background: #dba583;
  }
</style>


<section>
  <div class="promotions">
    <div class="container-fluid">
      <div class="promotions__inner">
        <div class="row">

          {% for block in section.blocks %}
          {% assign item = block.settings %}
          <div class="col-lg-4 col-md-4 col-12">
            <div class="promotions__box">
              <div class="promotions__box-img">
                <a href="{{ item.url }}">
                  <img class="image lazyload" src="{{ item.image | img_url: 'master' }}" data-src="{{ item.image }}" alt="{{ item.alt | escape }}">
                </a>
              </div>
              <div class="promotions__overlay">
                <div class="promotions__title"><h3>{{ item.title }}</h3></div>
                <div class="promotions__text"><p>{{ item.text }}</p></div>
                <div class="promotions__link"><a href="{{ item.url }}">{{ item.btn }}</a></div>
              </div>
            </div>
          </div>
          {% endfor %}

        </div>
      </div>
    </div>
  </div>
</section>






{% schema %}
 {
    "name":"Promotions",
    "settings":[],
    "blocks":[
        {
            "type":"item",
            "name":"item",
            "settings":[
                {
                    "type":"image_picker",
                    "id":"image",
                    "label":"Image"
                },
{
                    "type":"text",
                    "id":"title",
                    "label":"Title"
                },
{
                    "type":"text",
                    "id":"text",
                    "label":"Text"
                },
{
                    "type":"url",
                    "id":"url",
                    "label":"Button URL"
                },
{
                    "type":"text",
                    "id":"btn",
                    "label":"Button Text"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Promotions",
            "category":"custom"
        }
    ]
}
{% endschema %}

