 {
    "name":"Custom parallax section",
    "settings":[
        {
            "type":"image_picker",
            "id":"image",
            "label":"Background Image"
        },
{
            "type":"text",
            "id":"subtitle",
            "label":"Sub Title",
            "default":"Sub Title"
        },
