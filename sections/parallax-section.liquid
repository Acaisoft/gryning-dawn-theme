            "type":"text",
            "id":"title",
            "label":"Title",
            "default":"Title"
        },
{
            "type":"textarea",
            "id":"text",
            "label":"Text",
            "default":"Some text here"
        },
{
            "type":"text",
            "id":"btn_text",
            "label":"Button Text"
        },
{
            "type":"url",
            "id":"btn_link",
            "label":"Button URL"
        }
    ],
    "presets":[
        {
            "name":"Custom parallax section",
            "category":"custom"
        }
    ]
}
{% endschema %}

