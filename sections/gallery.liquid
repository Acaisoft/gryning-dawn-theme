<style>
  .caption{ 
    text-align: center;
    margin-bottom: 30px;
  }
  .fancybox-bg{
    background: #fff;
  	display: block !important;
  }
  .caption a{ 
    text-decoration: none; 
    color: #000; 
  } 
  .caption a:hover{ 
    text-decoration: none; 
    color: #000; 
  } 
  .caption h3{    
    font-size: 16px;
    padding-top: 5px;
    margin: 0px;
  }
  .caption img{
    height: 175px;
    width: 100%;
    object-fit: cover;
    object-position: center;
    transition: box-shadow 0.25s ease;
  }
  .caption a:hover img{
    box-shadow: 0 10px 20px rgb(0 0 0 / 25%);
  } 
</style>

<script type="text/javascript">
  $(document).ready(function() {  
    $("a.grouped_elements").fancybox();
  });
</script>

<div class="container">
  <div class="row">
    
    {% for block in section.blocks %}
  <div class="col-lg-3 col-3 col-6">
    <div class="caption">
      <a data-fancybox="gallery" href="{{ block.settings.img | img_url: 'master' }}">
        <img class="lazyload" src="{{ block.settings.img | img_url: 'master' }}">
      </a>
    </div>
  </div>
    {% endfor %}
    
  </div>
</div>




{% schema %}
{
    "name": "Gallery",
    "settings": [
		{
                    "type":"text",
                    "id":"title",
                    "label":"Title"
                },
{
                    "type":"text",
                    "id":"subtitle",
                    "label":"Sub Title"
                }

	],
	"blocks":[
        {
            "type":"image",
            "name":"image",
            "settings":[
{
                    "type":"image_picker",
                    "id":"img",
                    "label":"Gallery Image"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Gallery",
            "category":"custom"
        }
    ]
  }
{% endschema %}

