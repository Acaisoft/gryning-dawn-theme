{%- assign item = section.settings -%}

<style>
.zig-zag_a__inner {
    padding: 40px 0;
}
.zig-zag_a__img img {
    width: 100%;
    border: 10px solid #fff;
    border-radius: 5px;
}
.zig-zag_a__content {
    padding: 10px;
    height: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
}
.zig-zag_a__subtitle h3 {
    font-size: 16px;
    line-height: 24px;
  	text-transform: uppercase;
    letter-spacing: .2em;
    color: #3e5242;
    margin: 0;
    padding-bottom: 5px;
}
.zig-zag_a__title h2 {
    margin: 0;
    padding-bottom: 20px;
    font-size: 35px;
    line-height: 42px;
    text-transform: none;
    letter-spacing: unset;
    color: #3e5242;
}
.zig-zag_a__text p {
    margin: 0;
    padding: 0 0 20px 0;
    font-size: 18px;
    line-height: 26px;
    color: #3e5242;
}
.zig-zag_a__btn a {
    padding: 5px 20px;
    background: #dba583;
    font-size: 16px;
    line-height: unset;
    display: inline-block;
    margin: 20px 13.33333px 0 0;
    border-radius: 0px;
    text-decoration: none;
    color: #FFFFFF;
}
.zig-zag_a__btn a:hover {
    color: #d2d2d2;
    background: #010101;
}

</style>



<!-- zig-zag Design A start -->

  
<section>
  <div class="zig-zag_a">
    <div class="page-width">
      {% for block in section.blocks %}
      {% if block.settings.position == 'left'%}
      <div class="zig-zag_a_left">

        <div class="zig-zag_a__inner">
          <div class="row">
            <div class="col-lg-6">
              <div class="zig-zag_a__img">
                <img src="{{ block.settings.zig-zag_a__img | img_url: 'master' }}" />
              </div>
            </div>
            <div class="col-lg-6">
              <div class="zig-zag_a__content">
                <div class="zig-zag_a__subtitle"><h3>{{ block.settings.zig-zag_a__subtitle }}</h3></div>
                <div class="zig-zag_a__title"><h2>{{ block.settings.zig-zag_a__title }}</h2></div>
                <div class="zig-zag_a__text"><p>{{ block.settings.zig-zag_a__text }}</p></div>
                <div class="zig-zag_a__btn"><a href="{{ block.settings.zig-zag_a__link }}">{{ block.settings.zig-zag_a__link_text }}</a></div>
              </div>
            </div>
          </div>
        </div>

      </div>
      {% else %}
      <div class="zig-zag_a_right">

        <div class="zig-zag_a__inner">
          <div class="row">
            <div class="col-lg-6">
              <div class="zig-zag_a__content">
                <div class="zig-zag_a__subtitle"><h3>{{ block.settings.zig-zag_a__subtitle }}</h3></div>
                <div class="zig-zag_a__title"><h2>{{ block.settings.zig-zag_a__title }}</h2></div>
                <div class="zig-zag_a__text"><p>{{ block.settings.zig-zag_a__text }}</p></div>
                <div class="zig-zag_a__btn"><a href="{{ block.settings.zig-zag_a__link }}">{{ block.settings.zig-zag_a__link_text }}</a></div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="zig-zag_a__img">
                <img src="{{ block.settings.zig-zag_a__img | img_url: 'master' }}" />
              </div>
            </div>
          </div>
        </div>

      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
    "name": "Zig-zag",
    "settings": [],
    "blocks": [
        {
            "type": "Imagewithtext",
            "name": "Image with Text",
            "settings": [
                {
                    "type": "select",
                    "id": "position",
                    "label": "Image Position",
                    "default": "left",
                    "options": [
                        {
                            "value": "left",
                            "label": "Left"
                        },
                        {
                            "value": "right",
                            "label": "Right"
                        }
                    ]
                },
                {
                    "type": "image_picker",
                    "id": "zig-zag_a__img",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "zig-zag_a__title",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "zig-zag_a__subtitle",
                    "label": "Subtitle"                        
                },
                {
                    "type": "textarea",
                    "id": "zig-zag_a__text",
                    "label": "Text"                        
                },
                {
                    "type": "text",
                    "id": "zig-zag_a__link_text",
                    "label": "Button Text"                        
                },
                {
                    "type": "url",
                    "id": "zig-zag_a__link",
                    "label": "Button Link"                         
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Zig-zag",
            "category": "Zig-zag"
        }
    ]
}
{% endschema %}

