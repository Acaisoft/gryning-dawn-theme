<style>
  .product-box{
  	margin: 80px 0;
  }
  .product-box__products{
  	padding: 5px;
    border-radius: 5px;
    position: relative;
  }
  .product-box_title a{
  	color: #3e5242;
  }
  .product-box__products a{
  	display: block;
    width: 100%;
    height: 100%;
  }
  .product-box__products-img{
  	width: 100%;
    height: 300px;
  }
  .product-box__products-tag{
  	position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(255,255,255,0) 50%, rgba(73,73,77,1) 100%);
    display: flex;
    justify-content: flex-end;
    align-items: center;
    text-align: center;
    flex-direction: column;
    padding: 10px;
    margin: 5px;
    border-radius: 5px;
  }
  .product-box__products-name{
  	font-size: 16px;
    line-height: 24px;
    color: #fff;
  }
  .product-box__products-name:hover{
  	color: #d3d3d3;
  }
  
</style>

<section id="custom-product-box" class="section-separator">

  {% assign new_collection = collections[section.settings.my_collection] %}
  {% assign product_limit = section.settings.product_limit %}


  <div class="product-box"> 
    <div class="container">
      <div class="product-box__inner">
        {% if section.settings.show_title %}
        <h2 class="product-box_title"><a href="{{ new_collection.title }}">{% if section.settings.title == '' %}{{ new_collection.title }}{% else %}{{ section.settings.title }}{% endif %}</a></h2>
        {% endif %}

        <div class="row no-gutters product-box__slider">

          {% for product in new_collection.products  limit:product_limit %}
          <div class="col-lg-3 col-md-6 col-12">
            <div class="product-box__products">

              <a href="{{ product.url }}">
                <img class="product-box__products-img" src="{{ product.featured_image | product_img_url: 'medium' }}">
              </a>

              <div class="product-box__products-tag">

                <h3 class="m-0"><a href="{{ product.url }}" class="product-box__products-name">{{ product.title }}</a></h3>

                <div class="d-flex">
                  {% if section.settings.show_price %}
                  <p class="product-box__products-price m-0 pr-2">{{ country.currency.symbol }}{{ product.price | money_without_trailing_zeros }}</p>
                  {% endif %}
                  {% if section.settings.price_max %}
                  <s>{{ country.currency.symbol }}{{ product.compare_at_price_max | money_without_trailing_zeros }}</s>
                  {% endif %}
                </div>
              </div>

            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

</section>

{% schema %}
{
   "name":"Custom Collection Box",
   "settings":[
{
         "type":"checkbox",
         "id":"show_price",
         "label":"Show Product Price",
		 "default": true
      },
{
         "type":"checkbox",
         "id":"price_max",
         "label":"Show Compare Price"
      },
{
         "type":"checkbox",
         "id":"show_title",
         "label":"Show Collection Title"
      },
      {
         "type":"text",
         "id":"title",
         "label":"Collection Title"
      },
      {
          "type": "range",
          "id": "product_limit",
          "min": 4,
          "max": 24,
          "step": 4,
          "label": "Show products",
          "default": 4
      },
	  {
        "type":"collection",
        "id":"my_collection",
        "label":"Select Collection"
	  }
   ],
   "presets":[
      {
         "name":"Custom Collection Box",
         "category":"Product"
      }
   ]
}
{% endschema %}

