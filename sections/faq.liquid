                    "type":"text",
                    "id":"title",
                    "label":"Title"
                }
	],
	"blocks":[
        {
            "type":"item",
            "name":"item",
            "settings":[
{
                    "type":"text",
                    "id":"title",
                    "label":"Question"
                },
{
                    "type":"textarea",
                    "id":"text",
                    "label":"Answers"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"FAQ",
            "category":"custom"
        }
    ]
  }
{% endschema %}

